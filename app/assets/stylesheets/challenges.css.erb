  border-radius: 10px;
  transform: perspective(550px);
  opacity: 0.91;
  filter: brightness(112%) contrast(88%);
  margin: 0;
  background: linear-gradient(-39deg, var(--bs-white) 0%, rgb(231,158,83) 24%, rgb(233,166,97) 26%, rgba(221,117,10,0.38) 77%, var(--bs-white)), rgba(216,117,16,0.23);
  border-style: solid;
  border-color: rgb(255,255,255);
  padding-top: 17px;
  padding-bottom: 21px;
  box-shadow: 0px 0px 19px 0px rgb(123,85,48);
  margin-bottom: 0;
}

