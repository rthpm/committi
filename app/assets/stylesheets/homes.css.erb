#bg-index-committi {
    background: url(<%= asset_path("bg-index-committi.jpg") %>); 
    background-size: cover;
    background-repeat: no-repeat;
    height: 100vh;
    max-width: 100%;
    display: flex;
    align-items: center;
}

.container {
    display:flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

#logo-committi {
    margin-bottom: 50px; 
    height:100px;
}

.header-p {
    font-size: 34px;
    text-align: center;
    text-shadow: 0px 0px 4px #2a2828;
    background: rgba(42,40,40,0.35);
    border-radius: 11px;
}

#btn {
    font-weight: bold;
    font-size: 1.5rem;
    border: 2px solid white;
    border-radius: 14px;
    margin-top: 20px;
    background-color: #dd750a;
    width: auto;
    height: auto;
    box-shadow: 15px 16px 20px 3px #7b5530;
}

#btn:hover {
    background-color: #d6c7b8;
    color:#ff8811;
    border: solid 3px #dd750a;
    box-shadow: 15px 16px 20px 3px #e0852a5b;
}   