<h1 class="mb-5 mt-2">Changer vos informations de profil</h1>
<div class="card mb-3 shadow-lg p-3 mb-5 bg-body rounded" style="width: 25%">
  <%= form_for(@user, :url => { :action => "update_profile" } ) do |form| %>
  <%= form.label :email %><br />
  <%= form.email_field :email, :autocomplete => "email", :class => 'form-control mb-3 card-header'  %>
  <%= form.label :password, "Password" %>
  <%= form.password_field :password, :autocomplete => "off", :class => 'form-control mb-3 card-header'  %>
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, :class => 'form-control mb-3 card-header' %>
  <%= form.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= form.password_field :current_password, :class => 'form-control mb-3 card-header' %>
  <%= form.submit :class => 'btn btn-primary mb-2 action_container', :id => 'btn-formulary' %>
<% end %>

<h3 class='mt-3'>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(@user), data: { confirm: "Are you sure?" }, :class => "btn btn-outline-danger", method: :delete %></p>
