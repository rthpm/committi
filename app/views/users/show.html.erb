  <dt>Email</dt>
  <dd><%= @user.email %>
  <dt>Bio</dt>
  <dd><%= simple_format(@user.bio) %></dd>
</dl>

<h2>Statistiques</h2>

<dl>
  <dt>Likes</dt>
  <dd><%= @user.likes_counter(@user) %></dd>
