<h1 class="mb-5 mt-2">Modifier votre challenge</h1>
<div class="mb-3 shadow-lg p-3 mb-5 bg-body rounded">
  <%= form_for(@challenge, :url => { :action => "update" } ) do |form| %>
  <%= form.label :title %><br />
  <%= form.text_field :title, :autocomplete => "title", :class => 'form-control mb-3 card-header'  %>

  <%= form.label :subtitle %>
  <%= form.text_field :subtitle, :autocomplete => "subtitle", :class => 'form-control mb-3 card-header'  %>

  <%= form.label :description %>
  <%= form.text_area :description, :class => 'form-control mb-3 card-header' %>

  <%= form.submit :class => 'btn btn-primary mb-2 action_container', :id => 'btn-formulary' %>
<% end %>

