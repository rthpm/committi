  <div class="card mb-3 shadow-lg p-4 mb-5 bg-body rounded">
    <%= simple_format(@challenge.description) %>
  </div>
  <div class="col-9">
    <%= render "status_form.html" %>
    <%= render "feed.html" %>
  </div>
  <div class="col-3">
    <%= render "streaks_counter.html" %>
        <%= render "enrollment_button.html" %>
