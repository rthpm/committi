<div class="pageheader px-5 pt-5 mb-5">
  <div class="container mb-5">
    <h1 class= "h3">
      <%= @challenge.title %><br />
    </h1>
    <h2 class="h5">
      <%= @challenge.subtitle %>
    </h2>
  </div>
  <div class="container">
    <div class="d-flex justify-content-around text-secondary pb-2">
      <div><%= @challenge.enrollments.count %> participants</div>
      <div><%= @statuses.count %> status</div>
    </div>
  </div>
</div>
