  <div class="container">
    <div class="row">
      <h1 class= "mb-5 mt-2 col-12 text-center">
          <%= @challenge.title %><br />
          <small>
            <h4 class="m-2">
              <%= @challenge.subtitle %></small>
            </h4>
      </h1>
      <div class="col-4">
        <%= image_tag @user.avatar_url(@user, resize: "24x24!"), :class => "avatar" %>
      </div>
      <div class="col-8">
        <p>Challenge lanc√© par <%= link_to @user.username, @user_path %></p>
        <p><%= simple_format(@challenge.description) %></p>
        <%= render "enrollment_button.html" %>
        <%= render "streaks_counter.html" %>
        <%= render "status_form.html" %>
        <p><%= @statuses.count %> status</p>
        <%= render "feed.html" %>
    </div>
  </div>
</div>
