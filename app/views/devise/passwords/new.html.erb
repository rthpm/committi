              <div class="field">
                <%= form.label :email %><br />
                <%= form.email_field :email, :autofocus => 'true', :autocomplete => 'email', :class => 'form-control mb-3'  %>
              </div>
              <div class="actions">
                <%= form.submit "RÃ©initialiser mot de passe", :class => "btn btn-primary", :id => "btn-formulary" %>
