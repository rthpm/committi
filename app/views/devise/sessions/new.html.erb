<h2>Log in</h2>

<%= form_with model: @user, url: user_session_path, local: true do |form| %>
  <div class="field">
    <%= form.label :username_or_email %><br />
    <%= form.text_field :login, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :password %><br />
    <%= form.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= form.check_box :remember_me %>
      <%= form.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
