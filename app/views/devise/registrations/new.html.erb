<h2>Sign up</h2>

<section class="register-photo">
    <div class="form-container" id="form-container-registration">
        <div class="image-holder"></div>
          <div class="container p-5">
            <h2 style="color: ##dd750a"><strong>Cr√©er un compte</strong></h2>
            <%= form_with url: new_user_registration_path, method: :post do |form| %>
              <%= form.text_field :email, :placeholder => 'Email', :class => 'form-control mb-3' %>
              <%= form.password_field :password, :placeholder => 'Mot de passe', :class => 'form-control mb-3'%>
              <%= form.password_field :password, :placeholder => 'Confirmation Mot de passe', :class => 'form-control mb-3' %>
              <%= button_to "S'inscrire", root_path, :class => "btn btn-primary", :id => "btn-registration", :type => "button"%>
            <% end %>
          </div>
    </div>
</section>

