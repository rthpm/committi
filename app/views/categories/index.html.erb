<div class="pageheader px-5 pt-5 mb-5">
  <div class="container mb-5">
    <h1 class="h3">Les Challenges</h1>
  </div>
  <div class="container pb-2">
    <ul class="d-flex justify-content-around nav">
      <li class="nav-item d-flex justify-content-between">
        <%= link_to "Tous", categories_path, :class => "nav-link active" %>
      </li>
      <% @categories.each do |category| %>
      <li class="nav-item">
        <%= link_to category.name, category_path(category.slug), :class => "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
  
<%= render 'layouts/callout' %>

<div class="container">
  <div class="row">
    <div class= "mb-5 mt-2 col-12 text-center">
      <div class="container"> 
        <div class="row row-cols-3 g-2 flex-wrap">
          <% @challenges.order('created_at').reverse.each do |challenge| %>
            <div class="card border border-1">
              <div class="card-body">
                <div class="col-12">
                  <p>
                    <%= link_to challenge_path(challenge.slug) do %>
                    <%= challenge.title %> - <%= challenge.subtitle %>
                    <% end %>
                    lanc√© par <%= link_to challenge.user.username, profile_path(challenge.user.username) %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

